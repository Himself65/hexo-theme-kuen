{
  "defaultSeverity": "error",
  "extends": "tslint-config-standard",
  "globals": true,
  "linterOptions": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "**/*.test.(j|t)s",
      "node_modules/**/*"
    ]
  },
  "rules": {
    "quotemark": [true, "single"],
    "indent": [true, "spaces", 2],
    "interface-name": false,
    "ordered-imports": false,
    "object-literal-sort-keys": false,
    "no-consecutive-blank-lines": false
  }
}
